<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.usabilityapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.usabilityapp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.usabilityapp.ExerciseActivity"
            android:label="@string/title_activity_exercise" >
        </activity>
        <activity
            android:name="com.example.usabilityapp.GoalsActivity"
            android:label="@string/title_activity_goals" >
        </activity>
        <activity
            android:name="com.example.usabilityapp.ScheduleActivity"
            android:label="@string/title_activity_schedule"
            android:parentActivityName="com.example.usabilityapp.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.usabilityapp.MainActivity" />
        </activity>
        <activity
            android:name="com.example.usabilityapp.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.example.usabilityapp.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.usabilityapp.MainActivity" />
        </activity>
        <activity
            android:name="com.example.usabilityapp.CreateExerciseActivity"
            android:label="@string/title_activity_create_exercise" >
        </activity>
        <activity
            android:name="com.example.usabilityapp.WorkoutActivity"
            android:label="@string/title_activity_workout" >
        </activity>
        <activity
            android:name="com.example.usabilityapp.CreateWorkoutActivity"
            android:label="@string/title_activity_create_workout" >
        </activity>
        <activity
            android:name="com.example.usabilityapp.ReviewWorkoutActivity"
            android:label="@string/title_activity_review_workout" >
        </activity>
        <activity
            android:name="com.example.usabilityapp.GenerateStatsActivity"
            android:label="@string/title_activity_stats"
            android:parentActivityName="com.example.usabilityapp.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.usabilityapp.MainActivity" />
        </activity>
        <activity
            android:name="com.example.usabilityapp.MainStatsActivity"
            android:label="@string/title_activity_main_stats"
            android:parentActivityName="com.example.usabilityapp.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.usabilityapp.MainActivity" />
        </activity>
    </application>

</manifest>
