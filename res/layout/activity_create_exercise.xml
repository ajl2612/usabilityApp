<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CreateExerciseActivity" >

    <EditText
        android:id="@+id/createNameField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:maxLength="20"
        android:inputType="textCapSentences"
        android:ems="10"
        android:hint="Exercise Name" >

        <requestFocus />
    </EditText>

    <Spinner
        android:id="@+id/createTypeField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/createNameField"
        android:layout_below="@+id/createNameField"
        android:entries="@array/exercise_types"
        android:prompt="@string/exercise_type" />

    <Button
        android:id="@+id/createButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createTypeField"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:onClick="createExercise"
        android:text="Create" />

</RelativeLayout>